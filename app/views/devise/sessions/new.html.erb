	<div class="registration">
		<%= render "devise/shared/links" %>
	</div>
	<h1>Добро пожаловать!</h1>
</div>

<div id="content">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<div class="center">
		<div class="input"><%= f.label :"Электронная почта" %><br />
		<%= f.email_field :email, :autofocus => true %></div>

		<div class="input"><%= f.label :Пароль %><br />
		<%= f.password_field :password %></div>

		<% if devise_mapping.rememberable? -%>
			<div class="input"><%= f.check_box :remember_me %> <%= f.label :"Запомнить меня" %></div>
		<% end -%>
	<div><%= f.submit "Войти" %></div>
	</div>
<% end %>
<div class="center">
<%= render "devise/shared/links" %>
</div>
<%= link_to 'К списку новостей', news_index_path %>
</div>